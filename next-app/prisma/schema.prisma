generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id         String      @id @unique @default(uuid())
  title      String      @unique
  url        String      @unique
  coverImage String?
  coverTitle String?
  coverAlt   String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  links      Link[]
  DoubanInfo DoubanInfo?
}

model Link {
  id       String @id @unique @default(uuid())
  movie    Movie  @relation(fields: [movieId], references: [id])
  movieId  String
  quality  String
  size     String
  source   String
  magnet   String @unique
  download String @unique
}

model DoubanInfo {
  id         String @id @unique @default(uuid())
  movieId    String @unique
  movie      Movie  @relation(fields: [movieId], references: [id])
  url        String @unique
  title      String
  year       Int
  rating     Float
  coverImage String
}
