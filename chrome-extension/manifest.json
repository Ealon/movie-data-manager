{
  "manifest_version": 3,
  "name": "Movie Data Manager Helper",
  "version": "1.0.0",
  "description": "Automatically opens torrent modal, extracts links, and prints structured JSON to console.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://movie.douban.com/*",
    "https://en.rarbg-official.com/*",
    "https://www.yinfans.me/*",
    "https://www.yinfans.net/*",
    "http://localhost:*/*",
    "https://ealon-movie.vercel.app/*"
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    },
    "default_title": "Movie Data Manager",
    "default_popup": "src/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://en.rarbg-official.com/movies/*",
        "https://en.rarbg-official.com/seasons/*",
        "https://en.rarbg-official.com/episodes/*",
        "https://movie.douban.com/subject/*",
        "https://www.yinfans.me/movie/*",
        "https://www.yinfans.net/movie/*",
        "http://localhost:*/*",
        "https://ealon-movie.vercel.app/*"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}